ENV DATABASE_URL=postgresql://postgres.cvzlylxhvthjvmjuluqe:0emrypuED2Z1f43c@aws-0-us-east-1.pooler.supabase.com:5432/postgres
# postgresql://readonly.cvzlylxhvthjvmjuluqe:5abEF039ea0af@aws-0-us-east-1.pooler.supabase.com:5432/postgres


# Install dependencies
RUN uv sync

EXPOSE 8080

# Run the FastMCP server
